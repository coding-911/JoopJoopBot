# 서비스 포트 설정 예시 (실제 포트로 변경해주세요)
API_PORT=8000                      # FastAPI 서버 포트
VITE_PORT=5173                     # Vue.js 개발 서버 포트
POSTGRES_PORT=5432                # PostgreSQL 포트
AIRFLOW_PORT=8080                 # Airflow 웹 UI 포트
REDIS_PORT=6379                   # Redis 포트
GRAFANA_PORT=3000                 # Grafana 포트

# API 서버 설정 예시
API_HOST=0.0.0.0

# 프론트엔드 설정 예시
REACT_APP_API_URL=http://localhost:8000

# DART API 설정
DART_API_KEY=your-api-key

# 데이터베이스 공통 설정
POSTGRES_HOST=postgres-host-name

# API(백엔드) 데이터베이스 설정
API_POSTGRES_USER=backend-user-name
API_POSTGRES_PASSWORD=your-password-key
API_POSTGRES_DB=backend-db

# Airflow 데이터베이스 설정
AIRFLOW_POSTGRES_USER=airflow-user-name
AIRFLOW_POSTGRES_PASSWORD=your-password-key
AIRFLOW_POSTGRES_DB=airflow-db

# 테스트 DB 공통 설정
TEST_POSTGRES_USER=test-user-name
TEST_POSTGRES_PASSWORD=your-password-key

# API 테스트 DB 설정
TEST_API_POSTGRES_DB=api_test

# Airflow 테스트 DB 설정
TEST_AIRFLOW_POSTGRES_DB=airflow_test

# 벡터 DB 설정
API_VECTOR_DB_PATH=/your/api/vector/db/path    # API(백엔드) 서비스용 벡터 DB 경로
AIRFLOW_VECTOR_DB_PATH=your/airflow/vector/db/path   # Airflow 서비스용 벡터 DB 경로

# Airflow 기본 설정
AIRFLOW_UID=50000
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__WEBSERVER__SECRET_KEY=your-secret-key

# Airflow 알림 설정
AIRFLOW_ALERT_EMAIL=your-email@example.com
AIRFLOW_TASK_RETRIES=3
AIRFLOW_RETRY_DELAY_MINUTES=5

# Redis 설정
REDIS_HOST=redis
REDIS_PASSWORD=your-password-key

# Grafana 설정
GRAFANA_ADMIN_PASSWORD=your-password-key

# 로깅 설정
LOG_LEVEL=INFO